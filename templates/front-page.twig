{% extends "base.twig" %}

{% block content %}

    <div class="slider">
        <div>
            <img src="{{ slide1url }}" alt="">
        </div>
        <div>
            <img src="{{ slide2url }}" alt="">
        </div>
        <div>
            <img src="{{ slide3url }}" alt="">
        </div>
    </div>

    <div class="content-wrapper">
        <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
            <section class="article-content">
                <h1 class="article-h1">{{post.title}}</h1>
                <div class="article-body">
                    {{post.content}}
                </div>
            </section>
        </article>
    </div><!-- /content-wrapper -->
{% endblock %}