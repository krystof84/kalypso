{% extends "base.twig" %}

{% block content %}

    {% if( mapLocation.latitude and mapLocation.longitude ) %}
        <section class="contact-map">
            <div class="gmap" data-lat="{{ mapLocation.latitude }}" data-lng="{{ mapLocation.longitude }}"></div>
        </section>
    {% endif %}

    <div class="content-wrapper">
        <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
            <section class="article-content">
                <h1 class="article-h1">{{post.title}}</h1>
                <div class="article-body">
                    {{post.content}}
                </div>
            </section>
        </article>
    </div><!-- /content-wrapper -->
{% endblock %}

{% block add_scripts %}

    <script>

    </script>

    <script async defer src="https://maps.googleapis.com/maps/api/js?key={{ GMAP_KEY }}&callback=initMap"></script>


{% endblock %}
