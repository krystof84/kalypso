{% extends "base.twig" %}

	{% block content %}


        {# Header section - Category page #}
        {% if title %}
            <section class="page-header">
                <section class="page-header__container">

                    {% if categoryHeaderImage %}
                        <img src="{{categoryHeaderImage}}" class="page-header__image" alt="{{title}}">
                    {% else %}
                        <img src="{{function('get_template_directory_uri')}}/src/img/demo/cat-header-image-1.jpg" class="page-header__image" alt="{{title}}">
                    {% endif %}    

                    <div class="page-header__text-container">
                        <h1 class="page-header__text">{{ title }}</h1>
                    </div>

                </section>
            </section>
        {% endif %}

        {# Header section - Blog page #}
        {% if( headerImage and headerBlog ) %}
            <section class="page-header" >
                <section class="page-header__container">

                    <img src="{{ headerImage }}" class="page-header__image" alt="headerBlog">
                    <div class="page-header__text-container">
                        <h1 class="page-header__text">{{ headerBlog }}</h1>
                    </div>

                </section>
            </section>
        {% endif %}
        {# End Header section #}

        {# Header section #}
        {% if( post.thumbnail ) %}
            <section class="page-header">
                <section class="page-header__container">

                    <img src="{{ post.thumbnail }}" class="page-header__image">
                    <div class="page-header__text-container">
                        <h1 class="page-header__text">{{ post.title }}</h1>
                    </div>

                </section>
            </section>
        {% endif %}
        {# End Header section #}

		<div class="content-container">
			<div class="post-main category-main">
				{% for post in posts %}
					{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
				{% endfor %}

				{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
			</div>
			<div class="post-aside">
				{{ sidebarWidget4 }}
			</div>
		</div>
	{% endblock %}
