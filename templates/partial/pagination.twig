{% if posts.pagination.pages is not empty %}
    <div class="pagination-block">
        <ul class="pagination">
            {% if pagination.pages|first and pagination.pages|first.current != true %}
                <li class="first">
                    <a href="{{ pagination.pages|first.link }}">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>
            {% else %}
                <li class="first disabled">
                    <a>
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>
            {% endif %}

            {% if pagination.prev %}
                <li class="prev">
                    <a href="{{ pagination.prev.link }}">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>
            {% else %}
                <li class="prev disabled">
                    <a>
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>
            {% endif %}

            {% for page in pagination.pages %}
                {% if page.link %}
                    <li>
                        <a href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
                    </li>
                {% else %}
                    <li class="current">
                        <a class="{{ page.class }}">{{ page.title }}</a>
                    </li>
                {% endif %}
            {% endfor %}

            {% if pagination.next %}
                <li class="next">
                    <a href="{{ pagination.next.link }}">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>
            {% else %}
                <li class="next disabled">
                    <a>
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>
            {% endif %}
            {% if pagination.pages|last and pagination.pages|last.current != true %}
                <li class="last">
                    <a href="{{ pagination.pages|last.link }}">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>
            {% else %}
                <li class="last disabled">
                    <a>
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>
            {% endif %}
        </ul>
    </div>
{% endif %}
